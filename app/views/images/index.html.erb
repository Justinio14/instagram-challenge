<p id="notice"><%= notice %></p>

<h1>Welcome to Snapshot</h1>

<table>


  <tbody>
  <% if user_signed_in? %>
    <p><%= link_to 'Add new Image', new_image_path %></p>
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <% if @images.any? %>
          <% @images.each do |image| %>
              <% if user_signed_in? %>
                <tr>
                <td><%= image.name %></td>
                <td><%= image.picture %></td>
                <td><%= link_to "View image", image %></td>
                <td><%= link_to "Comment", new_image_comment_path(image) %></td>
                  <% if current_user.id == image.user_id %>
                    <td><%= link_to "Edit #{image.name}", edit_image_path(image) %></td>
                    <td><%= link_to "Delete #{image.name}", image, method: :delete %></td>
                  <% end %>
                </tr>
            <% end %>
          <% end %>
      <% else %>
      <h1>No images yet</h1>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>
